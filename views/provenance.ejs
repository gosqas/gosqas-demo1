<%- include("./partials/header.ejs") %>
<h1>Provenance records for <%= deviceID %></h1>
<% for (const record of records) { %>
    <div><%= record.assertion %></div>
    <div><%= record.createdAt %></div>
<% } %>
<hr>
<form method="POST">
    <div class="mb-3">
        <label class="form-label">Create New Provenance Record</label>
        <input type="text" class="form-control" name="assertion" required placeholder="Device Assertion">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include("./partials/footer.ejs") %>